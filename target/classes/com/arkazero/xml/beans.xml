<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd" >
		

	<bean class="com.arkazero.beans.exampleBeanPostProcessor"></bean> 
	
	<bean id="persona" class="com.arkazero.beans.Persona" autowire="byName">
		<property name="apodo" value="arkazero"></property>
	</bean>

	<bean id="pais" class="com.arkazero.beans.Pais">
		<property name="nombre" value="Colombia"></property>
	</bean>
	
	<bean id="ciudad" class="com.arkazero.beans.Ciudad">
		<property name="nombre" value="Bogota"></property>
	</bean>
</beans>
